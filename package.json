{
  "name": "bcorp-mint",
  "description": "The Bitcoin Corporation Mint — Design, print, stamp, and mint currency on BSV",
  "author": "The Bitcoin Corporation",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "pack": "electron-vite build && electron-builder --dir",
    "dist": "electron-vite build && electron-builder",
    "dist:mac": "electron-vite build && electron-builder --mac",
    "dist:win": "electron-vite build && electron-builder --win",
    "dist:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.bitcoincorporation.mint",
    "productName": "The Bitcoin Corporation Mint",
    "copyright": "Copyright © 2026 The Bitcoin Corporation",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64"]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "dmg": {
      "background": null,
      "icon": "resources/icon.icns",
      "iconSize": 128,
      "contents": [
        { "x": 380, "y": 240, "type": "link", "path": "/Applications" },
        { "x": 130, "y": 240, "type": "file" }
      ]
    },
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/icon.png",
      "category": "Graphics"
    },
    "afterPack": "scripts/sign-ffmpeg.cjs",
    "afterSign": "scripts/notarize.cjs",
    "publish": null
  },
  "dependencies": {
    "@bsv/sdk": "^2.0.3",
    "ffmpeg-static": "^5.3.0",
    "js-1sat-ord": "^0.1.91",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pageflip": "^2.0.3"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^30.1.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^2.2.0",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "ffmpeg-static"
    ]
  }
}
